<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" opacity="0.82" prefHeight="172.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.org.example.CityController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <Label text="Nome:" />
   <TextField fx:id="txtCity" alignment="CENTER" />
    <HBox alignment="CENTER" prefWidth="500.0">
        <Button fx:id="btnSaveCity" mnemonicParsing="false" onAction="#btnSaveCity" style="-fx-font: 16px Serif; -fx-padding: 10; -fx-background-color: #fa828a;" text="Salvar" />
        <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#btnSearch" style="-fx-font: 16px Serif; -fx-padding: 10; -fx-background-color: #f8fa82;" text="Buscar" />
        <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDelete" style="-fx-font: 16px Serif; -fx-padding: 10; -fx-background-color: #82f4fa" text="Excluir" />
        <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#btnUpdate" style="-fx-font: 16px Serif; -fx-padding: 10; -fx-background-color: #fafa82" text="Atualizar" />
    </HBox>
   <Button mnemonicParsing="false" onAction="#backToMenu" text="Voltar" />
</VBox>
